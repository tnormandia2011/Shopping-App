<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tim.shopping_app.Search"
    android:background="#ff23c5ff">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton6"
        android:src="@android:drawable/ic_search_category_default"
        android:layout_below="@+id/editTextsearch"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BackSearch"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextsearch"
        android:layout_below="@+id/BackSearch"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewSearch"
        android:layout_below="@+id/imageButton6"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:divider="@color/background_material_dark"
        android:dividerHeight="2dp"
        android:drawSelectorOnTop="true" />

</RelativeLayout>
